{
  "manifest_version": 3,
  "name": "Arches Web Scraper Extension",
  "version": "1.0",
  "description": "A Chrome extension to scrape web content",
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest",
    "storage",
    "tabs",
    "cookies"
  ],
  "host_permissions": [
    "https://*.facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "arches-logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "arches-logo.png",
    "48": "arches-logo.png",
    "128": "arches-logo.png"
  }
}
